<!-- app/views/authors/new.html.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Tambah Penulis</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <!-- Brand/logo -->
      <a class="navbar-brand" href="#">My Library</a>
      
      <!-- Toggler/collapsibe Button -->
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Navbar links -->
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to 'Daftar Penulis', authors_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Daftar Buku', books_path, class: 'nav-link' %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container mt-5">
    <h1 class="mb-4">Tambah Penulis</h1>
    <%= form_with model: @author, url: authors_path, method: :post, class: 'needs-validation', novalidate: true do |form| %>
      <% if @author.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @author.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="mb-3">
        <%= form.label :author_name, class: 'form-label' %>
        <%= form.text_field :author_name, class: 'form-control', required: true %>
      </div>

      <div class="mb-3">
        <%= form.submit 'Tambah Penulis', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>

  <script>
    // Validasi form sisi klien menggunakan HTML5 constraints
    // Anda dapat menambahkan logika validasi kustom di sini jika diperlukan
  </script>
</body>
</html>
