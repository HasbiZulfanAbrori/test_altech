<!-- app/views/authors/index.html.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Daftar Penulis</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <!-- Brand/logo -->
      <a class="navbar-brand" href="#">My Library</a>
      
      <!-- Toggler/collapsibe Button -->
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Navbar links -->
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to 'Daftar Penulis', authors_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Daftar Buku', books_path, class: 'nav-link' %>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-5">
    <h1 class="mb-4">Daftar Penulis</h1>
    <%= link_to 'Tambah Penulis', new_author_path, class: 'btn btn-success mb-4' %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nama Penulis</th>
          <th scope="col">Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% @authors.each_with_index do |author, index| %>
          <tr>
            <td><%= author.id %></td>
            <td><%= author.author_name %></td>
            <td>
                <%= link_to 'Edit', edit_author_path(author), class: 'btn btn-warning btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <!-- Pagination links -->
    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center">
        <%= will_paginate @books, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
      </ul>
    </nav>
  </div>

  <!-- Script Bootstrap JS (Pastikan Anda sudah mengimpor JS Bootstrap jika belum) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js" integrity="sha384-3R9j9Xz4S5F5m5Oj3zdzgHd5z5sm8b8fzb5t78EF5PZbzqF5CqzW5F5B6a0b5I3L1" crossorigin="anonymous"></script>
</body>
</html>
